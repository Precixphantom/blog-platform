<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard || Blogs</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

  <%- include('partials/blogNav') %>

  <!-- Dashboard Header -->
  <section class="dashboard-header container">
    <% if (user) { %>
      <h1>Welcome, <%= user.username %></h1>
    <% } else { %>
      <h1>Welcome to The Blog Platform</h1>
    <% } %>
    <p>Manage your blogs and explore more</p>
  </section>

  <section class="blogs-grid container">
  <% if (blogs && blogs.length > 0) { %>
    <% blogs.forEach(blog => { %>
      <div class="blog-card full-width">
        <h2><%= blog.title %></h2>
        <p>Author: <%= blog.author ? blog.author.username : "Unknown Author" %></p>
        <p><%= blog.content ? blog.content.substring(0, 200) : "" %>...</p>

        <a href="/blogs/<%= blog._id %>" class="btn btn-view">Read More</a>
      </div>
    <% }) %>
  <% } else { %>
    <p>No blogs yet. Why not <a href="/blogs/create">create one</a>?</p>
  <% } %>
</section>


</body>
</html>

<%- include('partials/footer') %>